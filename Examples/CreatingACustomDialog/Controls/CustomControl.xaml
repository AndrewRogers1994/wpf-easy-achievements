<UserControl x:Class="CreatingACustomDialog.Controls.CustomControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CreatingACustomDialog.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="800" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label x:Name="acheivementTitle" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Content="Title Goes here" FontSize="24"/>
        <Label x:Name="acheivementMessage" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Content="Message Goes here" FontSize="20"/>
        <ProgressBar x:Name="acheivementProgress" Grid.Row="2" Maximum="1"/>
    </Grid>
</UserControl>
