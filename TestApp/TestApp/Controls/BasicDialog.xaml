<UserControl x:Name="AcheivementWindow" x:Class="TestApp.Controls.BasicDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800" Opacity="0">

	<Border Background="White" BorderBrush="#FF000000" BorderThickness="1" CornerRadius="8">
		<Grid>
			<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="5*"/>
		</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>
			<Image Grid.RowSpan="2" Source="images/trophy-award-icon.jpg"/>
			<Label Grid.Column="1" Content="Acheivement Title" FontSize="22" FontFamily="Segoe UI" FontWeight="Bold" Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
			<Label Grid.Column="1" Grid.Row="1" Content="This is description of the acheivement" FontSize="18" FontFamily="Segoe UI" FontWeight="Light" Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center"/>

		</Grid>
	</Border>
</UserControl>
